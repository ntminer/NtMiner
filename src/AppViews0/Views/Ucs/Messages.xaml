<UserControl 
    x:Class="NTMiner.Views.Ucs.Messages"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:sys="clr-namespace:System;assembly=mscorlib"
	xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
	xmlns:uc="clr-namespace:NTMiner.Views.Ucs"
	Background="White"
	mc:Ignorable="d" d:DesignHeight="460" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <uc:LocalMessages Margin="0 0 0 6">
        </uc:LocalMessages>
        <GridSplitter 
            Grid.Row="0" 
            Height="6" 
            BorderThickness="0 1" 
            BorderBrush="{StaticResource DarkLineColor}" 
            Background="White" 
            VerticalAlignment="Bottom" 
            HorizontalAlignment="Stretch"></GridSplitter>
        <uc:ServerMessages Grid.Row="1"></uc:ServerMessages>
    </Grid>
</UserControl>
