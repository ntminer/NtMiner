<blankWindow:BlankWindow x:Class="NTMiner.Views.MinerClientsWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:blankWindow="http://NTMiner.com"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
		xmlns:local="clr-namespace:NTMiner.Views"
		xmlns:view="clr-namespace:NTMiner.Views"
		xmlns:uc="clr-namespace:NTMiner.Views.Ucs"
		xmlns:vm="clr-namespace:NTMiner.Vms;assembly=AppModels"
		xmlns:app="clr-namespace:NTMiner;assembly=AppModels"
		Background="{StaticResource ThemeBackground}"
		WindowState="Maximized"
        d:DataContext="{d:DesignData Source=/Design/MinerClientsWindowViewModel.xaml}"
		WindowStartupLocation="CenterScreen"
		Title="矿机列表"
		mc:Ignorable="d" d:DesignHeight="1000" d:DesignWidth="5300">
    <blankWindow:BlankWindow.Resources>
        <ResourceDictionary>
            <Style x:Key="LblTb" TargetType="TextBlock" BasedOn="{StaticResource LblTbBase}">
                <Setter Property="Width" Value="60"></Setter>
            </Style>
        </ResourceDictionary>
    </blankWindow:BlankWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <!--上标题栏-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <WrapPanel Grid.Column="0" Margin="4" VerticalAlignment="Center">
                <Menu Background="Transparent">
                    <MenuItem Width="22">
                        <MenuItem.Icon>
                            <Path
					            Width="13"
					            Height="13"
					            Data="{StaticResource Icon_Miner}"
					            Fill="{StaticResource ThemeForeground}"
					            Stretch="Fill" />
                        </MenuItem.Icon>
                        <MenuItem 
                            Header="打开家目录"
                            Command="{x:Static app:AppStatic.OpenDir}" 
                            CommandParameter="{x:Static app:AppStatic.HomeDir}">
                            <MenuItem.Icon>
                                <Path
						            Width="16"
						            Height="16"
						            Data="{StaticResource Icon_Home}"
						            Fill="{StaticResource IconFillColor}"
						            Stretch="Fill" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem 
                            Header="打开临时目录" 
                            Command="{x:Static app:AppStatic.OpenDir}" 
                            CommandParameter="{x:Static app:AppStatic.TempDir}">
                            <MenuItem.Icon>
                                <Path
						            Width="16"
						            Height="16"
						            Data="{StaticResource Icon_Dir}"
						            Fill="{StaticResource IconFillColor}"
						            Stretch="Fill" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="图标" Command="{x:Static app:AppStatic.ShowIcons}">
                            <MenuItem.Icon>
                                <Path
							        Width="16"
							        Height="16"
							        Data="{StaticResource Icon_Icon}"
							        Fill="{StaticResource IconFillColor}"
							        Stretch="Fill" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                </Menu>
                <TextBlock
					VerticalAlignment="Center"
					Margin="4 0 8 0"
					FontSize="14"
					Foreground="{StaticResource ThemeForeground}"
					Text="开源矿工群控 - 矿机列表">
                </TextBlock>
                <uc:MainBar></uc:MainBar>
            </WrapPanel>
            <WrapPanel Grid.Column="1">
                <controls:KbButton 
					ToolTip="矿机雷达"
					Command="{x:Static app:AppStatic.OpenMinerClientFinder}" 
					Background="Transparent" 
					BorderThickness="0"
					Margin="0 0 12 0"
					CornerRadius="2">
                    <Path 
						Width="18"
						Height="18"
						Data="{StaticResource Icon_MinerClientFinder}"
						Fill="{StaticResource ThemeForeground}"
						Stretch="Fill" />
                </controls:KbButton>
                <controls:KbButton 
					ToolTip="收益计算器"
					Command="{x:Static app:AppStatic.ShowCalc}" 
					Background="Transparent" 
					BorderThickness="0"
					Margin="0 0 12 0"
					CornerRadius="2">
                    <Path 
						Width="18"
						Height="18"
						Data="{StaticResource Icon_Calc}"
						Fill="{StaticResource ThemeForeground}"
						Stretch="Fill" />
                </controls:KbButton>
                <controls:KbButton 
                    Width="20"
                    Height="20"
					Margin="0 0 8 0"
					ToolTip="算力图"
					Command="{x:Static app:AppStatic.ShowChartsWindow}" Background="Transparent" BorderThickness="0"
					CornerRadius="2">
                    <Image Source="/NTMinerWpf;component/Styles/Images/cc32.png">
                    </Image>
                </controls:KbButton>
                <uc:MainMenu Background="Transparent">
                </uc:MainMenu>
                <controls:KbSystemMinButton />
                <controls:KbSystemMaxButton />
                <controls:KbSystemCloseButton />
            </WrapPanel>
        </Grid>
        <TextBlock x:Name="TbUcName" Foreground="{StaticResource ThemeForeground}" Visibility="{x:Static app:AppStatic.IsDevModeVisible}" HorizontalAlignment="Center"></TextBlock>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="234"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border
			    BorderThickness="0 0 1 0"
                BorderBrush="{StaticResource LineColor}">
                <ScrollViewer 
                    Padding="0 0 4 0"
			        PreviewMouseDown="ScrollViewer_PreviewMouseDown"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto"
                    Background="#F5F5F5">
                    <StackPanel Margin="0 0 0 40">
                        <ListBox 
				            Background="Transparent"
				            ItemsSource="{Binding MineCoinVms.PleaseSelect}"
				            SelectedItem="{Binding CoinVm}"
				            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
				            ScrollViewer.VerticalScrollBarVisibility="Disabled"
				            ItemContainerStyle="{StaticResource ListBoxBarItem}"
				            BorderThickness="0">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel>
                                    </WrapPanel>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Padding="10 2" Text="{Binding Code}"></TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <GroupBox>
                            <GroupBox.Header>
                                <WrapPanel>
                                    <TextBlock VerticalAlignment="Center">作业</TextBlock>
                                    <controls:KbButton  
							            Command="{Binding MineWorkVms.Add}" 
							            Background="Transparent" 
							            BorderThickness="0"
							            Margin="2 0"
							            CornerRadius="2">
                                        <WrapPanel>
                                            <Path
									            Width="18"
									            Height="18"
									            ToolTip="新建作业"
									            Data="{StaticResource Icon_Add}"
									            Fill="{StaticResource IconFillColor}"
									            Stretch="Fill" />
                                        </WrapPanel>
                                    </controls:KbButton>
                                    <controls:KbButton  
							            Command="{Binding SelectedMineWork.Edit}" 
							            Background="Transparent" 
							            BorderThickness="0"
							            Margin="2 0"
							            CornerRadius="2">
                                        <WrapPanel>
                                            <Path
									            Width="18"
									            Height="18"
									            ToolTip="编辑作业"
									            Data="{StaticResource Icon_Edit}"
									            Fill="{StaticResource IconFillColor}"
									            Stretch="Fill" />
                                        </WrapPanel>
                                    </controls:KbButton>
                                    <controls:KbButton  
							            Command="{Binding SelectedMineWork.Remove}" 
							            Background="Transparent" 
							            BorderThickness="0"
							            Margin="2 0"
							            CornerRadius="2">
                                        <WrapPanel>
                                            <Path
									            Width="18"
									            Height="18"
									            ToolTip="删除作业"
									            Data="{StaticResource Icon_Delete}"
									            Fill="{StaticResource IconFillColor}"
									            Stretch="Fill" />
                                        </WrapPanel>
                                    </controls:KbButton>
                                </WrapPanel>
                            </GroupBox.Header>
                            <ListBox 
					            Background="Transparent"
					            ItemsSource="{Binding MineWorkVms.MineWorkVmItems}"
					            SelectedItem="{Binding SelectedMineWork}"
					            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
					            ScrollViewer.VerticalScrollBarVisibility="Disabled"
					            ItemContainerStyle="{StaticResource ListBoxBarItem}"
					            BorderThickness="0">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel>
                                        </WrapPanel>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Padding="10 2" Text="{Binding Name}" ToolTip="{Binding Description}"></TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </GroupBox>
                        <StackPanel Visibility="{Binding IsMineWorkSelected, Converter={StaticResource BoolToVisibilityInvertConverter}}">
                            <GroupBox>
                                <GroupBox.Header>
                                    <WrapPanel>
                                        <TextBlock VerticalAlignment="Center">分组</TextBlock>
                                        <controls:KbButton  
								            Command="{Binding MinerGroupVms.Add}" 
								            Background="Transparent" 
								            ToolTip="新建组"
								            BorderThickness="0"
								            Margin="2 0"
								            CornerRadius="2">
                                            <WrapPanel>
                                                <Path
										            Width="18"
										            Height="18"
										            Data="{StaticResource Icon_Add}"
										            Fill="{StaticResource IconFillColor}"
										            Stretch="Fill" />
                                            </WrapPanel>
                                        </controls:KbButton>
                                        <controls:KbButton  
								            Command="{Binding SelectedMinerGroup.Edit}" 
								            Background="Transparent" 
								            BorderThickness="0"
								            Margin="2 0"
								            CornerRadius="2">
                                            <WrapPanel>
                                                <Path
										            Width="18"
										            Height="18"
										            ToolTip="编辑组"
										            Data="{StaticResource Icon_Edit}"
										            Fill="{StaticResource IconFillColor}"
										            Stretch="Fill" />
                                            </WrapPanel>
                                        </controls:KbButton>
                                        <controls:KbButton  
									        Command="{Binding SelectedMinerGroup.Remove}" 
									        Background="Transparent" 
									        BorderThickness="0"
									        Margin="2 0"
									        CornerRadius="2">
                                            <WrapPanel>
                                                <Path
										            Width="18"
										            Height="18"
										            ToolTip="删除组"
										            Data="{StaticResource Icon_Delete}"
										            Fill="{StaticResource IconFillColor}"
										            Stretch="Fill" />
                                            </WrapPanel>
                                        </controls:KbButton>
                                    </WrapPanel>
                                </GroupBox.Header>
                                <ListBox 
						            Background="Transparent"				
						            ItemsSource="{Binding MinerGroupVms.MinerGroupItems}"
						            SelectedItem="{Binding SelectedMinerGroup}"
						            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
						            ScrollViewer.VerticalScrollBarVisibility="Disabled"
						            ItemContainerStyle="{StaticResource ListBoxBarItem}"
						            BorderThickness="0">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel>
                                            </WrapPanel>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Padding="10 2" Text="{Binding Name}" ToolTip="{Binding Description}"></TextBlock>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </GroupBox>
                            <GroupBox Header="状态">
                                <ListBox 
						            Background="Transparent"
						            ItemsSource="{x:Static app:AppStatic.MineStatusEnumItems}"
						            SelectedItem="{Binding MineStatusEnumItem}"
						            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
						            ScrollViewer.VerticalScrollBarVisibility="Disabled"
						            ItemContainerStyle="{StaticResource ListBoxBarItem}"
						            BorderThickness="0">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel>
                                            </WrapPanel>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Padding="10 2" Text="{Binding Description}"></TextBlock>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </GroupBox>
                            <GroupBox Header="矿池">
                                <StackPanel>
                                    <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Text="{Binding Pool}" Width="200" Background="White"></TextBox>
                                    <ListBox 
							            Background="Transparent"
							            ItemsSource="{Binding CoinVm.OptionPools}"
							            SelectedItem="{Binding PoolVm}"
							            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
							            ScrollViewer.VerticalScrollBarVisibility="Disabled"
							            ItemContainerStyle="{StaticResource ListBoxBarItem}"
							            BorderThickness="0">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel>
                                                </WrapPanel>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Padding="10 2" Text="{Binding Name}"></TextBlock>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="钱包">
                                <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" Text="{Binding Wallet}" Width="200" Background="White"></TextBox>
                            </GroupBox>
                            <WrapPanel>
                                <TextBlock Style="{StaticResource LblTb}">IP</TextBlock>
                                <TextBox VerticalContentAlignment="Center" Width="146" Text="{Binding MinerIp, ValidatesOnExceptions=True}" Background="White"></TextBox>
                            </WrapPanel>
                            <WrapPanel>
                                <TextBlock Style="{StaticResource LblTb}">矿机名</TextBlock>
                                <TextBox VerticalContentAlignment="Center" Width="146" Text="{Binding MinerName}" Background="White"></TextBox>
                            </WrapPanel>
                            <WrapPanel>
                                <TextBlock Style="{StaticResource LblTb}">内核</TextBlock>
                                <TextBox VerticalContentAlignment="Center" ToolTip="内核名以此开头的内核" Width="146" Text="{Binding Kernel}" Background="White"></TextBox>
                            </WrapPanel>
                            <WrapPanel>
                                <TextBlock Style="{StaticResource LblTb}">开源版本</TextBlock>
                                <TextBox VerticalContentAlignment="Center" ToolTip="客户端版本号以此开头的客户端" Width="146" Text="{Binding Version}" Background="White"></TextBox>
                            </WrapPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <uc:MinerClientsToolBar DataContext="{Binding}" Background="#EEEEF2">
                </uc:MinerClientsToolBar>
                <Grid Grid.Row="1" Background="{StaticResource MinerProfileBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MinHeight="100"></RowDefinition>
                        <RowDefinition Height="*" MinHeight="200"></RowDefinition>
                    </Grid.RowDefinitions>
                    <DataGrid 
				        Grid.Row="0"
				        Margin="0 0 0 28"
				        BorderThickness="0"
				        IsReadOnly="True"
				        SelectionMode="Extended"
				        SelectionChanged="MinerClientsGrid_OnSelectionChanged"
				        Sorting="DataGrid_OnSorting"
				        HeadersVisibility="All"
				        RowHeaderWidth="10"
				        FrozenColumnCount="{Binding FrozenColumnCount}"
				        ItemsSource="{Binding MinerClients}"
				        SelectedItem="{Binding CurrentMinerClient}"
				        MouseDoubleClick="DataGrid_MouseDoubleClick"
				        AutoGenerateColumns="False">
                        <DataGrid.Resources>
                            <controls:BindingProxy x:Key="proxy" Data="{Binding}" />
                        </DataGrid.Resources>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="刷新" Padding="4" Margin="0 0 6 0" Command="{Binding Data.RefreshMinerClients,Source={StaticResource proxy}}">
                                    <MenuItem.Icon>
                                        <Path
									        Width="16"
									        Height="16"
									        Data="{StaticResource Icon_Refresh}"
									        Fill="{StaticResource IconFillColor}"
									        Stretch="Fill" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="开始挖矿" Padding="4" Margin="0 0 6 0" Command="{Binding Data.StartMine,Source={StaticResource proxy}}">
                                    <MenuItem.Icon>
                                        <Path
									        Width="16"
									        Height="16"
									        Data="{StaticResource Icon_Start}"
									        Fill="{StaticResource IconFillColor}"
									        Stretch="Fill" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="停止挖矿" Padding="4" Margin="0 0 6 0" Command="{Binding Data.StopMine,Source={StaticResource proxy}}">
                                    <MenuItem.Icon>
                                        <Path
									        Width="16"
									        Height="16"
									        Data="{StaticResource Icon_Stop}"
									        Fill="{StaticResource IconFillColor}"
									        Stretch="Fill" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="重命名" Padding="4" Margin="0 0 6 0" Command="{Binding Data.OneKeyMinerNames,Source={StaticResource proxy}}">
                                    <MenuItem.Icon>
                                        <Path
									        Width="16"
									        Height="16"
									        Data="{StaticResource Icon_MinerName}"
									        Fill="{StaticResource IconFillColor}"
									        Stretch="Fill" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="超频" Padding="4" Margin="0 0 6 0" Command="{Binding Data.OneKeyOverClock,Source={StaticResource proxy}}">
                                    <MenuItem.Icon>
                                        <Path
									        Width="16"
									        Height="16"
									        Data="{StaticResource Icon_OverClock}"
									        Fill="{StaticResource IconFillColor}"
									        Stretch="Fill" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="编辑作业" Padding="4" Margin="0 0 6 0" Command="{Binding Data.EditMineWork,Source={StaticResource proxy}}">
                                    <MenuItem.Icon>
                                        <Path
									        Width="16"
									        Height="16"
									        Data="{StaticResource Icon_Edit}"
									        Fill="{StaticResource IconFillColor}"
									        Stretch="Fill" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Command="{Binding Data.OneKeySetting,Source={StaticResource proxy}}" Padding="4" Margin="0 0 6 0" Header="远程设置">
                                    <MenuItem.Icon>
                                        <Path
									        Width="16"
									        Height="16"
									        Data="{StaticResource Icon_Setting}"
									        Fill="{StaticResource IconFillColor}"
									        Stretch="Fill" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="重启挖矿端" Padding="4" Margin="0 0 6 0" Command="{Binding Data.RestartNTMiner,Source={StaticResource proxy}}">
                                    <MenuItem.Icon>
                                        <Path
									        Width="16"
									        Height="16"
									        Data="{StaticResource Icon_Restart}"
									        Fill="{StaticResource IconFillColor}"
									        Stretch="Fill" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="重启电脑" Padding="4" Margin="0 0 6 0" Command="{Binding Data.RestartWindows,Source={StaticResource proxy}}">
                                    <MenuItem.Icon>
                                        <Path
									        Width="16"
									        Height="16"
									        Data="{StaticResource Icon_Restart2}"
									        Fill="{StaticResource IconFillColor}"
									        Stretch="Fill" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="关闭电脑" Padding="4" Margin="0 0 6 0" Command="{Binding Data.ShutdownWindows,Source={StaticResource proxy}}">
                                    <MenuItem.Icon>
                                        <Path
									        Width="16"
									        Height="16"
									        Data="{StaticResource Icon_Shutdown}"
									        Fill="{StaticResource IconFillColor}"
									        Stretch="Fill" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="添加矿机" Padding="4" Margin="0 0 6 0" Command="{Binding Data.AddMinerClient,Source={StaticResource proxy}}">
                                    <MenuItem.Icon>
                                        <Path
									        Width="16"
									        Height="16"
									        Data="{StaticResource Icon_Add}"
									        Fill="{StaticResource IconFillColor}"
									        Stretch="Fill" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="删除矿机" Padding="4" Margin="0 0 6 0" Command="{Binding Data.RemoveMinerClients,Source={StaticResource proxy}}">
                                    <MenuItem.Icon>
                                        <Path
									        Width="16"
									        Height="16"
									        Data="{StaticResource Icon_Delete}"
									        Fill="{StaticResource IconFillColor}"
									        Stretch="Fill" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <!--LastActivedOnText-->
                            <DataGridTemplateColumn 
						        Visibility="{Binding Data.ColumnsShow.LastActivedOnText,Source={StaticResource proxy},Converter={StaticResource BoolToVisibilityConverter}}"
						        IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel>
                                        <WrapPanel>
                                            <TextBlock Text="{x:Static vm:ColumnsShowViewModel.LAST_ACTIVED_ON_TEXT}"></TextBlock>
                                            <controls:KbButton
										        ToolTip="不展示"
										        Command="{Binding Data.ColumnsShow.Hide, Source={StaticResource proxy}}" 
										        CommandParameter="LastActivedOnText"
										        Background="Transparent">
                                                <WrapPanel>
                                                    <Path
												        Width="14"
												        Height="8"
												        Data="{StaticResource Icon_Hide}"
												        Fill="#FF5A5A5A"
												        Stretch="Fill" />
                                                </WrapPanel>
                                            </controls:KbButton>
                                            <TextBlock Margin="4 0 0 0" Text="{Binding Data.CountDown,Source={StaticResource proxy}}"></TextBlock>
                                        </WrapPanel>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <WrapPanel>
                                            <Border Width="10" Height="10" Background="Green" ToolTip="挖矿中" Visibility="{Binding IsMining,Converter={StaticResource BoolToVisibilityConverter}}"></Border>
                                            <Border Width="10" Height="10" Background="Red" ToolTip="未挖矿" Visibility="{Binding IsMining,Converter={StaticResource BoolToVisibilityInvertConverter}}"></Border>
                                            <TextBlock Text="{Binding LastActivedOnText}" Margin="4 0 0 0"></TextBlock>
                                        </WrapPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--BootTimeSpanText-->
                            <DataGridTextColumn 
						        Binding="{Binding BootTimeSpanText}"
						        Visibility="{Binding Data.ColumnsShow.BootTimeSpanText,Source={StaticResource proxy},Converter={StaticResource BoolToVisibilityConverter}}"
						        IsReadOnly="True">
                                <DataGridTextColumn.Header>
                                    <WrapPanel>
                                        <TextBlock Text="{x:Static vm:ColumnsShowViewModel.BOOT_TIME_SPAN_TEXT}"></TextBlock>
                                        <controls:KbButton
									        ToolTip="不展示"
									        Command="{Binding Data.ColumnsShow.Hide, Source={StaticResource proxy}}" 
									        CommandParameter="BootTimeSpanText"
									        Background="Transparent">
                                            <WrapPanel>
                                                <Path
											        Width="14"
											        Height="8"
											        Data="{StaticResource Icon_Hide}"
											        Fill="#FF5A5A5A"
											        Stretch="Fill" />
                                            </WrapPanel>
                                        </controls:KbButton>
                                    </WrapPanel>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>
                            <!--MineTimeSpanText-->
                            <DataGridTextColumn 
						        Binding="{Binding MineTimeSpanText}"
						        Visibility="{Binding Data.ColumnsShow.MineTimeSpanText,Source={StaticResource proxy},Converter={StaticResource BoolToVisibilityConverter}}"
						        IsReadOnly="True">
                                <DataGridTextColumn.Header>
                                    <WrapPanel>
                                        <TextBlock Text="{x:Static vm:ColumnsShowViewModel.MINE_TIME_SPAN_TEXT}"></TextBlock>
                                        <controls:KbButton
									        ToolTip="不展示"
									        Command="{Binding Data.ColumnsShow.Hide, Source={StaticResource proxy}}" 
									        CommandParameter="MineTimeSpanText"
									        Background="Transparent">
                                            <WrapPanel>
                                                <Path
											        Width="14"
											        Height="8"
											        Data="{StaticResource Icon_Hide}"
											        Fill="#FF5A5A5A"
											        Stretch="Fill" />
                                            </WrapPanel>
                                        </controls:KbButton>
                                    </WrapPanel>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>
                            <!--Work-->
                            <DataGridTextColumn 
						        Binding="{Binding SelectedMineWork.Name}"
						        Visibility="{Binding Data.ColumnsShow.Work, Source={StaticResource proxy}, Converter={StaticResource BoolToVisibilityConverter}}" 
						        IsReadOnly="True">
                                <DataGridTextColumn.Header>
                                    <WrapPanel>
                                        <TextBlock Text="{x:Static vm:ColumnsShowViewModel.WORK}"></TextBlock>
                                        <controls:KbButton
									        ToolTip="不展示"
									        Command="{Binding Data.ColumnsShow.Hide, Source={StaticResource proxy}}" 
									        CommandParameter="Work"
									        Background="Transparent">
                                            <WrapPanel>
                                                <Path
